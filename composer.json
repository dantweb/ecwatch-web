{
  "name": "dantweb/ecw-server",
  "type": "project",
  "license": "proprietary",
  "minimum-stability": "dev",
  "require": {
    "php": ">=8.2.0",
    "ext-json": "*",
    "symfony/config": "^7.2",
    "symfony/console": "^7.2",
    "symfony/dependency-injection": "^7.2",
    "symfony/dotenv": "^7.2",
    "symfony/flex": "*",
    "symfony/framework-bundle": "^7.2",
    "symfony/http-foundation": "^7.2",
    "symfony/http-kernel": "^7.2",
    "symfony/runtime": "^7.2",
    "symfony/security-core": "^7.2",
    "symfony/yaml": "^7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "squizlabs/php_codesniffer": "^3.8",
    "phpmd/phpmd": "^2.13",
    "symfony/var-dumper": "^7.2"
  },
  "autoload": {
    "psr-4": {
      "Dantweb\\EcwServer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dantweb\\EcwServer\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=PSR12 --extensions=php --colors -p src/ tests/",
    "phpstan": "phpstan analyse src/ tests/ --level=8",
    "phpmd": "phpmd src/,tests/ text cleancode,codesize,controversial,design,naming,unusedcode",
    "test": "phpunit",
    "check": [
      "@phpcs",
      "@phpstan",
      "@phpmd",
      "@test"
    ],
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "symfony/flex": true,
      "phpstan/extension-installer": true,
      "symfony/runtime": true
    },
    "platform": {
      "php": "8.2.0"
    }
  }
}
